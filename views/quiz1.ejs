    /* Progress bar */
    .progress-container {
        width: 90%;
        max-width: 700px;
        height: 18px;
        background-color: #d6e0ff;
        border-radius: 10px;
        margin-bottom: 30px;
        overflow: hidden;
        box-shadow: inset 0 2px 5px rgba(0,0,0,0.2);
    }

    .progress-bar {
        height: 100%;
        width: 0%;
        background: linear-gradient(90deg, #4d79ff, #3366ff, #0033cc);
        border-radius: 10px;
        transition: width 0.4s ease;
    }

    /* Question card */
    .question {
        width: 100%;
        max-width: 700px;
        padding: 25px 20px;
        margin: 20px auto;
        background: #ffffffcc;
        border-radius: 15px;
        box-shadow: 0 6px 18px rgba(0,0,0,0.1);
        text-align: center;
        transform: scale(1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .question:hover {
        transform: scale(1.02);
        box-shadow: 0 10px 25px rgba(0,0,0,0.15);
    }

    .question p {
        font-size: 1.4rem;
        font-weight: 600;
        color: #002080;
        margin-bottom: 20px;
    }

    .options {
        display: flex;
        justify-content: center;
        gap: 25px;
        margin-bottom: 12px;
        flex-wrap: wrap;
    }

    .options input {
        display: none; /* Hide default radio */
    }

    .options label {
        display: flex;
        align-items: center;
        justify-content: center;
        background: #e6ecff;
        padding: 10px 18px;
        border-radius: 25px;
        cursor: pointer;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        user-select: none; /* Prevent text highlighting */
    }

    .options label:hover {
        background: #ccd9ff;
        transform: scale(1.05);
    }

    /* Selected state */
    .options input:checked + span {
        background: #4d79ff;
        color: #fff;
        padding: 10px 18px;
        border-radius: 25px;
        transition: background 0.3s ease, transform 0.2s ease;
        transform: scale(1.1);
        box-shadow: 0 4px 10px rgba(0,0,0,0.15);
    }

    .prefer-not {
        font-style: italic;
        cursor: pointer;
        display: block;
        margin-top: 10px;
        font-size: 1rem;
        color: #555;
    }

    .button2 {
