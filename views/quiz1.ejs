<script>
    const form = document.getElementById("quizForm");
    const progressBar = document.getElementById("progress-bar");
    const totalQuestions = document.querySelectorAll(".question").length;

    // Track progress
    form.addEventListener("change", () => {
        let answered = 0;
        for (let i = 1; i <= totalQuestions; i++) {
            if (form[`q${i}`] && form[`q${i}`].value) {



                answered++;
            }
        }
        let progress = (answered / totalQuestions) * 100;
        progressBar.style.width = progress + "%";
    });

    // Allow deselecting radio buttons by clicking again
    document.querySelectorAll("input[type=radio]").forEach(radio => {
        radio.addEventListener("mousedown", function(e) {
            if (this.checked) {
                e.preventDefault(); // Prevent default re-check
                this.checked = false; // Uncheck it
                this.dispatchEvent(new Event("change")); // Trigger change event for progress
            }
        });
    });
</script>

