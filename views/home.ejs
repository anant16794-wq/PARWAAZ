<style>

body {
    margin: 0;
    padding: 0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f0f0f0;
    overflow-x: hidden;
    z-index: 0;
}

 body::before{
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: 
            linear-gradient(rgba(185, 207, 255, 0.2), rgba(198, 215, 253, 0.2)),
            url("51.jpeg");
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            position: fixed;
            opacity: 0.1;
            color: rgb(1, 19, 68);
            z-index: -1;
        }

.heading {
    background: linear-gradient(90deg, #003366, #005f73);
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0px 2px 10px rgba(0,0,0,0.3);
}

.heading ul {
    list-style: none;
    display: flex;
    gap: 30px;
    font-size: 18px;
    margin: 0;
}

.heading li a {
    text-decoration: none;
    color: #fff;
    font-weight: 500;
    padding: 5px;
    position: relative;
}

.heading li a::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -5px;
    height: 3px;
    width: 0;
    background-color: #000;
    transition: width 0.4s ease;
}

.heading li a:hover {
    color: #000;
}

.heading li a:hover::after {
    width: 100%;
}

.heading img{
    margin-right: 865px;
}

.content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 70%;
    max-width: 900px;
    margin: 100px auto;
    margin-top: -50px;
    padding: 40px;
    text-align: center;
}

.text {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 30px;
}

.para {
    font-size: 1.5rem;
    font-family: 'Georgia', serif;
    color: #000;
    line-height: 1.6;
    max-width: 600px;
}

.text img {
    width: 300px;
    height: auto;
    border-radius: 10px;
}

.btn5 {
    border: none;
    background: #fff;
    text-decoration: none;
    color: #000;
    padding: 20px 45px;
    cursor: pointer;
    font-size: 20px;
    font-weight: bold;
    margin-top: 50px;
    border-radius: 25px;
    transition: transform 0.3s ease, background 0.3s ease;
    box-shadow: 0px 5px 15px rgba(0,0,0,0.3);
}

.btn5:hover {
    transform: scale(1.1);
    background: #000;
    color: #fff;
}

.quote-box {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    width: 90%;
    max-width: 1200px;
    background-color: #fff;
    padding: 45px;
    border-radius: 22px;
    box-shadow: 0 15px 45px rgba(0,0,0,0.2);
    gap: 40px;
    margin: 100px auto;
}

.images-left {
    position: relative;
    width: 45%;
    max-width: 400px;
    height: 300px;
}

.images-left img {
    width: 270px;
    height: 180px;
    object-fit: cover;
    border-radius: 15px;
    position: absolute;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.images-left img:nth-child(1) { top: 0; left: 0; z-index:3; transform: rotate(-5deg); }
.images-left img:nth-child(2) { top: 60px; left: 90px; z-index:2; transform: rotate(5deg); }
.images-left img:nth-child(3) { top: 120px; left: 180px; z-index:1; transform: rotate(-2deg); }

.images-left img:hover { transform: scale(1.1) rotate(0deg); z-index:4; }

.quote-right {
    width: 50%;
    font-size: 1.5rem;
    line-height: 1.6;
    color: #333;
    font-style: italic;
    position: relative;
    margin-left: 50px;
}

.quote-right::before {
    content: "“";
    font-size: 3rem;
    position: absolute;
    top: -20px;
    left: -20px;
    color: #999;
}

.quote-right::after {
    content: "”";
    font-size: 3rem;
    position: absolute;
    bottom: -20px;
    right: -20px;
    color: #999;
}

.quote-right button {
    margin-top: 20px;
    padding: 12px 30px;
    font-size: 1rem;
    font-weight: bold;
    color: #fff;
    background-color: #005f73;
    border: none;
    border-radius: 25px;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 5px 15px rgba(0,0,0,0.3);
}

.quote-right button:hover {
    background-color: #00bcd4; 
    color: #003366; 
    transform: scale(1.1);
    box-shadow: 0 8px 20px rgba(0,0,0,0.4);
}


.slideshow-box {
    position: relative;
    width: 90%;
    max-width: 1000px;
    height: 400px;
    margin: 80px auto;
    border-radius: 22px;
    overflow: hidden;
    box-shadow: 0 15px 45px rgba(0,0,0,0.2);
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
}

.slide {
    position: absolute;
    display: flex;
    width: 100%;
    height: 100%;
    opacity: 0;
    animation: fade 16s infinite;
    align-items: center;
    justify-content: space-between;
    padding: 20px;
    box-sizing: border-box;
}

.slide-image {
    flex: 1;
    height: 100%;
    border-radius: 15px;
    overflow: hidden;
}

.slide-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 15px;
}

.slide-text {
    flex: 1;
    padding: 40px;
    color: #333;
}

.slide-text h2 {
    font-size: 2rem;
    margin-bottom: 15px;
    color: #003366;
}

.slide-text p {
    font-size: 1.2rem;
    line-height: 1.6;
}

.footer-column {
    background-color: #003366;
    color: #fff;
    padding: 30px 20px;
    width: 100%;
    box-shadow: 0 8px 25px rgba(0,0,0,0.2);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.footer-column:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 30px rgba(0,0,0,0.3);
}

.footer-column h3 {
    font-size: 1.8rem;
    margin-bottom: 20px;
    color: #f0f0f0;
    border-bottom: 2px solid #fff;
    padding-bottom: 10px;
}

.footer-column ul {
    list-style: none;
    padding: 0;
    margin: 0 0 20px 0;
}

.footer-column ul li {
    font-size: 1rem;
    margin-bottom: 12px;
    transition: color 0.3s ease, transform 0.3s ease;
    cursor: pointer;
}

.footer-column ul li:hover {
    color: #00bcd4;
}

.social-icons {
    display: flex;
    gap: 15px;
    margin-top: 10px;
}

.social-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    color: #fff;
    border-radius: 50%;
    background-color: #005f73;
    font-size: 18px;
    transition: all 0.3s ease;
}

.social-icon:hover {
    background-color: #00bcd4;
    color: #003366;
    transform: scale(1.2);
}

@keyframes fade {
    0% { opacity: 0; }
    5% { opacity: 1; }
    25% { opacity: 1; }
    30% { opacity: 0; }
    100% { opacity: 0; }
}

.slideshow-box .slide:nth-child(1) { animation-delay: 0s; }
.slideshow-box .slide:nth-child(2) { animation-delay: 4s; }
.slideshow-box .slide:nth-child(3) { animation-delay: 8s; }
.slideshow-box .slide:nth-child(4) { animation-delay: 12s; }

@media (max-width: 768px) {
    .text, .quote-box, .slide {
        flex-direction: column;
        text-align: center;
    }
    .slide img, .slide p {
        width: 100%;
    }
    .images-left {
        width: 100%;
        height: auto;
    }
    .slideshow-box {
        flex-direction: column;
        height: auto;
    }
    .slide {
        flex-direction: column;
        padding: 20px;
        text-align: center;
    }
    .slide-image, .slide-text {
        flex: unset;
        width: 100%;
        height: auto;
    }
    .slide-text {
        padding: 20px;
    }
}
